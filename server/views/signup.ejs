<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>

    </style>
</head>
<body>
    <% include partials/heading.ejs %>
    <div class="container text-center">
        <br>
        <h2>Welcome to Coconut</h2>
        <br>   
        <div class="row" style="box-shadow: 0 1px 2px 0 rgba(229, 229, 229, 0.5), 0 2px 2px 0 rgba(157, 147, 147, 0.5);
        border: solid 1px #e8e8e8;">
            
            <div class="col-sm-6" style="padding: 6%;">
                
                

                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/signup" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="passwordConf" placeholder="Confirm Password">
                    </div>

                    <button type="submit" name="submit" class="btn btn-primary" style="background-color: #f99bb5; color: white; width: 100%; border-radius: 0; height: 3em;"
                     disabled = true>Sign Up</button>
                </form>

                <hr>

                

                <!--
                <div class="text-center">
                    <p>A demo by <a href="http://scotch.io">Scotch</a>.</p>
                    <p>Visit the <a href="http://scotch.io/tutorials/javascript/easy-node-authentication-setup-and-local">tutorial</a>.</p>
                </div>
                -->

            </div>

            <div class="col-sm-6" style="border-left: 1px dashed #ededed; padding: 6%;" >
                <br><a href="/auth/google" class="btn " style="background-color: #ff2e31; color: white; padding: 1em 2em; margin:5px; width: 100%;">
                    <span class="fa fa-google-plus"></span> Google</a>
                <br><a href="/auth/facebook" class="btn" style="background-color: #3b5998; color: white; padding: 1em 2em; margin:5px; width: 100%;">
                    <span class="fa fa-facebook"></span> Facebook</a>
                <br><a href="/auth/twitter" class="btn" style="background-color: #55acee; color: white; padding: 1em 2em; margin:5px; width: 100%;">
                    <span class="fa fa-twitter"></span> Twitter</a>

            </div>


            <p>Already have an account? <a href="/login" style="color: #ea6989;">Sign In</a></p>
        </div>

    </div>

    <script>

    $("input[name=password],input[name=passwordConf]").keyup(function(){
        if (passwordMatch() == false){
            $("button[name=submit]").prop('disabled', true);
            //document.getElementById("login-error").style.display = "block";
        }
        else {
            console.log("jq pswd true");
            $("button[name=submit]").prop('disabled', false);
        }
    });

    //check if password matches passwordConf 
    function passwordMatch(){
        var password1 = $("input[name=password]").val();
        var password2 = $("input[name=passwordConf]").val();
        //console.log(password1 + "," + password2);
        if(password1 == password2){
            //console.log("password matches!");
            return true;
        }
        else{
            //console.log("please confirm your password");
            return false;
        }
    }

    </script>

</body>
</html>
